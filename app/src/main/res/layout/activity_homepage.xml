<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sv.calorieintakeapps.feature_homepage.presentation.HomepageActivity">

    <FrameLayout
        android:id="@+id/flayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toTopOf="@id/navbar_homepage"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#B82D00"
        android:tint="@color/white"
        app:borderWidth="0dp"
        app:fabCustomSize="64dp"
        app:layout_constraintBottom_toTopOf="@id/navbar_homepage"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/outline_insert_drive_file_24" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_homepage" />

</androidx.constraintlayout.widget.ConstraintLayout>