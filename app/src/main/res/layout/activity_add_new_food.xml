<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sv.calorieintakeapps.feature_add_new_food.AddNewFoodActivity">

    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back_24" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@+id/btn_back"
            android:fontFamily="@font/poppins_medium"
            android:text="Ajukan Makanan Baru"
            android:textAlignment="center"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama Makanan"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_food_name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Nama makanan"
                android:inputType="textCapWords"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_nutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Gizi (tiap 100 g atau ml)"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_calories"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Kalori"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_carbs"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Karbohidrat"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_protein"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Protein"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_fat"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Lemak"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_water"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Air"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_urt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="URT 1"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_name_1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Sebutan URT"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_value_1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Gram atau ml tiap URT"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_urt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="URT 2 (opsional)"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_name_2"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Sebutan URT"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_value_2"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Gram atau ml tiap URT"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_urt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="URT 3 (opsional)"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_name_3"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Sebutan URT"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_value_3"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Gram atau ml tiap URT"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_urt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="URT 4 (opsional)"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_name_4"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Sebutan URT"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_value_4"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Gram atau ml tiap URT"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_urt_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="URT 5 (opsional)"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_name_5"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Sebutan URT"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_urt_value_5"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edt_primary"
                android:drawableStart="@drawable/ic_food_19"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Gram atau ml tiap URT"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_primary"
                android:fontFamily="@font/poppins_semibold"
                android:text="Ajukan Makanan"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>